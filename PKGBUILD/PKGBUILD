# Maintainer: Aleix Bon√© <abone9999@gmail.com>
pkgname=jutge_cli-git 
pkgver=r21.bd7c83e
pkgrel=1
pkgdesc="Command line utilities for jutge.org online jutge"
arch=('any')
url="https://github.com/Leixb/jutgeutils"
license=('GPL3')
depends=('python' 'python-beautifulsoup4' 'python-requests' 'python-argparse')
makedepends=('git') 
provides=("${pkgname%-git}")
conflicts=("jutgeutils-git" "${pkgname%-git}")
source=("git+https://github.com/Leixb/jutge_cli")
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/${pkgname%-git}"

    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd "$srcdir/${pkgname%-git}"

    # Create installation folders
    install -d "${pkgdir}/opt/${pkgname%-git}"
    install -d "${pkgdir}/usr/bin"

    # Copy script files to installation folder
    install -D "${srcdir}/${pkgname%-git}/"*.py "${pkgdir}/opt/${pkgname%-git}"

    # Create link to /usr/bin
    ln -s "/opt/${pkgname%-git}/jutge.py" "${pkgdir}/usr/bin/jutge"
}
